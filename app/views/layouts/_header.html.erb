<header class="navbar navbar-fixed-top navbar-inverse dn-front-header">
  <div class="container">
    <%= link_to root_path, id: "logo" do %>
      <%= image_tag "logo-mnrv" %>
    <% end %>
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed"
        data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"
        aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <nav class="collapse navbar-collapse dropdown" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav login">
        <li class=""><a href="/">SmartPhone <span class="sr-only">(current)</span></a></li>
        <li><a href="#">Top 10</a></li>
      </ul>

      <%= search_form_for @search, url: searchs_path, html: {class: "navbar-form navbar-left",  style: "margin-top: 12px"} do |f| %>
        <div class="form-group">
          <%= f.text_field :name_cont,
            class: "form-control", placeholder: t(:search_name) %>
        </div>
          <%= f.submit t(:search), class: "btn btn-default" %>
      <% end %>

      <ul class="nav navbar-nav navbar-right ">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="hidden-xs"><%= current_user.name.blank? ? current_user.email : current_user.name %></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile",
                user_path(current_user) %></li>
              <li><%= link_to "Update profile",
                edit_user_registration_path(current_user) %></li>
              <li class="divider"></li>
              <% if can? :manage, :all %>
                <li><%= link_to t(:admin_view),
                  admin_root_path %></li>
                <li class="divider"></li>
              <% end %>
              <li>
                <%= link_to t(:logout), destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", new_user_session_path, class: "login" %></li>
          <li><%= link_to t(:signup), new_user_registration_path, class: "sign-up" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>


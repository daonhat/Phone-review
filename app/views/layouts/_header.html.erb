<header class="navbar navbar-fixed-top navbar-inverse dn-front-header">
  <div class="container">
    <%= link_to root_path, id: "logo" do %>
      <%= image_tag "logo-mnrv" %>
    <% end %>
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed"
        data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"
        aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <nav class="collapse navbar-collapse dropdown" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav login">
        <li class=""><a href="/">SmartPhone <span class="sr-only">(current)</span></a></li>
        <li><a href="#">Top 10</a></li>
      </ul>
      <form class="navbar-form navbar-left" style="margin-top: 12px">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
      <ul class="nav navbar-nav navbar-right ">
        <% if user_signed_in? %>
          <% if can? :create, Phone %>
            <li><%= link_to t(:new_phone),
              new_phone_path %>
            </li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="hidden-xs"><%= current_user.email %></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(:change_password),
                edit_user_registration_path(current_user) %></li>
              <li class="divider"></li>
              <% if can? :manage, :all %>
                <li><%= link_to t(:admin_view),
                  admin_root_path %></li>
                <li class="divider"></li>
              <% end %>
              <li>
                <%= link_to t(:logout), destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", new_user_session_path, class: "login" %></li>
          <li><%= link_to t(:signup), new_user_registration_path, class: "sign-up" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>


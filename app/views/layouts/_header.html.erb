<header class="navbar navbar-fixed-top navbar-inverse dn-front-header">
  <div class="container">
    <a href="/" id="logo">
      <img src="https://www.service2media.com/wp-content/uploads/2013/12/app-review-logo.jpg" class="img-responsive">
    </a>
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed"
        data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"
        aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <nav class="collapse navbar-collapse dropdown" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav login">
      </ul>
      <ul class="nav navbar-nav navbar-right ">
        <% if user_signed_in? %>
          <li class="dropdown" style="margin-top: 6px;">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="hidden-xs"><%= current_user.name.blank? ? current_user.email : current_user.name %><span class="caret"></span></span>
            </a>
            <ul class="dropdown-menu" style="margin-top: 2px;">
              <li><%= link_to "Profile",
                user_path(current_user) %></li>
              <li><%= link_to "Update profile",
                edit_user_registration_path(current_user) %></li>
              <li class="divider"></li>
              <% if can? :manage, :all %>
                <li><%= link_to t(:admin_view),
                  admin_root_path %></li>
                <li class="divider"></li>
              <% end %>
              <li>
                <%= link_to t(:logout), destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", new_user_session_path, class: "login" %></li>
          <li><%= link_to t(:signup), new_user_registration_path, class: "sign-up" %></li>
        <% end %>
      </ul>

      <%= search_form_for @search, url: searchs_path, html: {class: "navbar-form navbar-right dn-search-form"} do |f| %>
        <div class="form-group">
          <%= f.text_field :name_cont,
            class: "form-control", placeholder: "Search" %>
        </div>
      <% end %>
    </nav>
  </div>
</header>


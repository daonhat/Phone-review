<%= form_for @comment ||= Comment.new,
  html: { multipart: true, class: "form-horizontal" }, remote: true do |f| %>
  <div class="hidden">
   <%= f.hidden_field :phone_id, value: phone.id %>
   <%= f.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="form-group">
   <div class="col-md-1">
     <span class="pull-right">
       <%= image_tag current_user.avatar, class: "dn-admin-user-image" %>
     </span>
   </div>
   <div class="col-md-10">
    <%= f.text_field :content, placeholder: "Write a comment...",
      class: "form-control comment_field",id: "comment_content_#{phone.id}" %>
   </div>
  </div>
 <% end %>

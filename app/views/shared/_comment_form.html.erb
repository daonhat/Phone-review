<%= form_for @comment ||= Comment.new,
  html: { multipart: true, class: "form-horizontal" }, remote: true do |f| %>
  <div class="hidden">
   <%= f.hidden_field :phone_id, value: phone.id %>
   <%= f.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="form-group">
   <div class="">
    <%= f.text_field :content, placeholder: "Moi ban de lai binh luan...",
      class: "form-control comment_field",id: "comment_content_#{phone.id}" %>
   </div>
  </div>
 <% end %>

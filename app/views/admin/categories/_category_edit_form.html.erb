<span id="category-name-<%= "#{category.id}" %>"><%= link_to category.name, [:admin, category] %></span>
<%= form_for [:admin, category], html: {class: "edit-category hidden", id: "category-form-#{category.id}"},
  remote: true do |f| %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.submit t(:update), class: "btn btn-success" %>
<% end %>

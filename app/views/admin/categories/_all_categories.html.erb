<table class="table">
  <thead>
    <th>#</th>
    <th><%= t "category.name" %></th>
    <th><%= t "category.created_at" %></th>
    <th><%= t "category.update_at" %></th>
    <th class="action"><%= t :action %></th>
  </thead>
  <tbody>
    <% @categories.each_with_index do |category, index| %>
      <tr>
        <td><%= index + 1 +
          (params[:page].nil? ? 0 : (params[:page].to_i - 1)*8) %>
        </td>
        <td id="name-field-<%= category.id %>">
          <%= render "category_edit_form", category: category %>
        </td>
        <td><%= category.created_at.strftime t(:time_type) %></td>
        <td><%= category.updated_at.strftime t(:time_type) %></td>
        <td class="dn-action-padding" data-id="<%= category.id %>">
          <%= link_to t(:edit), edit_admin_category_path(category),
            remote: true, class: "btn btn-primary" %>
          <%= link_to t(:delete), [:admin, category], method: :delete,
            data: {confirm: t(:sure)}, remote: true, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

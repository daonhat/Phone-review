<%= form_for [:admin, @user], html: {class: 'col-md-12'} do |f| %>
  <div class="col-md-6 clearfix">
    <%= f.label t"user.email" %> 
    <%= f.text_field :email, class:"form-control" %>
  </div>
  <p><%= @user.errors[:email][0].capitalize if @user.errors[:email][0] %></p>
  <div class="col-md-12 clearfix create-user-button">
    <%= f.submit t("user.create"), 
      class: "btn btn-primary" %>
  </div>
<% end %>

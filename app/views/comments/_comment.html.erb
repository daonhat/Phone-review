<div class="row a_comment dn-cmt" id="comment-<%= comment.id %>">
  <div class="dn-user">
    <a>
      <div>
        <%= image_tag comment.user.avatar, class: "dn-admin-user-image" %>
      </div>
      <strong><%= comment.user.name.nil? ? comment.user.email : comment.user.name %></strong>
    </a>
  </div>
  <div class="clearfix"></div>
  <div class="col-md-9 dn-cmt-content">
    <%= render "comments/comment_edit_form", comment: comment %>
    <br/>
    <h6><%= time_ago_in_words(comment.created_at) %>. </h6>
  </div>
  <div class="">
    <% if current_user? comment.user %>
      <%= link_to t(:edit), edit_comment_path(comment), remote: true %>
      <%= link_to "Delete", comment, method: :delete, data: {confirm: t(:sure)}, remote: true %>
    <% end %>
  </div>
</div>
